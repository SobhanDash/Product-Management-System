<form id="update_user" method="PUT" action="/api/products/:id">
  <!-- <form id="update_user" method="PUT" > -->
  <div class="form-outline mb-4">
    <input type="hidden" name="id" value="<%= products._id %>" />
    <input
      placeholder="Product Name"
      type="text"
      id="form3Example1cg"
      class="form-control form-control-lg lgip"
      name="pname"
      value="<%= products.pname %>"
    />
    <label class="form-label visually-hidden" for="form3Example1cg"
      >Product Name</label
    >
  </div>

  <div class="form-outline mb-4">
    <input
      placeholder="Price"
      type="number"
      id="form3Example3cg"
      class="form-control form-control-lg lgip"
      name="price"
      value="<%= products.price %>"
    />
    <label class="form-label visually-hidden" for="form3Example3cg"
      >Price</label
    >
  </div>

  <div class="form-outline mb-4">
    <input
      placeholder="Quantity"
      type="number"
      id="form3Example4cg"
      class="form-control form-control-lg lgip"
      name="quantity"
      value="<%= products.quantity %>"
    />
    <label class="form-label visually-hidden" for="form3Example4cg"
      >Quantity</label
    >
  </div>

  <div class="form-outline mb-4">
    <input
      placeholder="Date"
      type="text"
      id="form3Example4cdg"
      class="form-control form-control-lg lgip"
      name="date"
      value="<%= products.date %>"
    />
    <label class="form-label visually-hidden" for="form3Example4cdg"
      >Date</label
    >
  </div>

  <div class="form-outline mb-4">
    <input
      placeholder="Sale"
      type="number"
      id="form3Example4cdg"
      class="form-control form-control-lg lgip"
      name="sale"
      value="<%= products.sale %>"
    />
    <label class="form-label visually-hidden" for="form3Example4cdg"
      >Sale</label
    >
  </div>

  <div class="d-flex justify-content-center">
    <button type="submit" class="btn-lg btn btn-outline-light px-5">
      Update Product
    </button>
  </div>
  <div>
    <p class="text-center text-muted mt-5 mb-0 lead">
      Go Back
      <a href="/dashboard" class="text-white-50 fw-bold">Dashboard</a>
    </p>
  </div>
</form>
